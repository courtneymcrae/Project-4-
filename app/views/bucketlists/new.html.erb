<div class="panel panel-default">
    <div class="panel-heading"> 
    </div>
<div class="panel-body">
    <div class="container">

        <%= form_for @bucketlist, html: {multipart: true} do |f| %>

            <div class="row">
                <div class="form-group">
                    <label>Bucket List To Do</label>
                    <%= f.text_field :to_do, placeholder: "What do you want to do?", class: "form-control" %>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label>Date</label>
                     <%= f.date_field :date, placeholder: "When will you complete this?", class: "form-control" %>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                     <label>Summary</label>
                        <%= f.text_area :summary, rows: 5, placeholder: "Tell about your plans...", class: "form-control" %>
                     </div>
                    </div>

            <div class="actions">
                <%= f.submit "Save", class: "btn btn-primary center-block" %>
            </div>
        

        <% end %>
        
       </div>
    </div>
</div>